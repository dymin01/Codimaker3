<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="상의"
        android:gravity="center"
        android:id="@+id/tv_top"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/tv_pants" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:text="하의"
        android:gravity="center"
        android:id="@+id/tv_pants"
        android:textSize="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="신발"
        android:gravity="center"
        android:id="@+id/tv_shoes"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="50dp"
        android:layout_below="@+id/tv_pants" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_top"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/tv_pants"
        android:layout_alignEnd="@+id/img_shoes"
        android:layout_toEndOf="@+id/tv_top" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_pants"
        android:layout_alignBottom="@+id/tv_pants"
        android:layout_below="@+id/tv_top"
        android:layout_alignEnd="@+id/img_top"
        android:layout_toEndOf="@+id/tv_top" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_shoes"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tv_shoes"
        android:layout_alignTop="@+id/tv_shoes" />

</RelativeLayout>
